# Dewey Library Tracker Environment Variables
# Copy this file to .env and fill in your actual values

# ==============================================
# REQUIRED: Library Configuration
# ==============================================
LIBRARY_URL=https://lawrence.bibliocommons.com

# ==============================================  
# REQUIRED: Family Member Credentials
# ==============================================
# Add as many patrons as needed (increment the number)

# First family member
PATRON_1_NAME=John Doe
PATRON_1_USER=john.doe.library.username  
PATRON_1_PASS=john_library_password

# Second family member  
PATRON_2_NAME=Jane Doe
PATRON_2_USER=jane.doe.library.username
PATRON_2_PASS=jane_library_password

# Third family member (add more as needed)
# PATRON_3_NAME=Kid Doe
# PATRON_3_USER=kid.doe.library.username
# PATRON_3_PASS=kid_library_password

# ==============================================
# OPTIONAL: Application Configuration  
# ==============================================

# How often to scrape library data (in hours)
SCRAPE_INTERVAL=1

# Number of days to consider items "due soon" (default: 5)
DUE_SOON_DAYS=5

# Logging level: DEBUG, INFO, WARN, ERROR
LOG_LEVEL=INFO

# Set to false to see browser during scraping (for debugging)
PLAYWRIGHT_HEADLESS=true

# Application environment
RACK_ENV=development

# Port for web server  
PORT=4567